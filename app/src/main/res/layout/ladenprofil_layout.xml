<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <LinearLayout
    android:id="@+id/maincontainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">



    <LinearLayout
        android:id="@+id/maincontainerinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/hauptstandortContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <Button
                android:id="@+id/buttonAnfrageSenden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbutton"
                android:text="Anfrage senden"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:layout_gravity="left"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/addFavourite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#F0F0F0"
                android:foreground="@drawable/fav_button"
                android:freezesText="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:visibility="visible"
                android:layout_gravity="right"/>

            <Button
                android:id="@+id/buttonKarte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbutton"
                android:text="Karte"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:layout_gravity="left"
                android:layout_weight="1"/>

        </LinearLayout>





        <LinearLayout
            android:id="@+id/ladenNameContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textViewLadenname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                tools:text="Nadel &amp; Faden"
                android:textSize="55px"
                android:gravity="center_horizontal" />


            <ImageView
                android:id="@+id/imageViewNadelUndFaden"
                android:layout_toLeftOf="@id/textViewLadenname"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_home_24"


                />

            <TextView
                android:id="@+id/textViewAdresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:textColor="#000000"
                android:textSize="40px"
                tools:text="Hüxstraße 59, Lübeck"
                android:gravity="center_horizontal"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/kategorieContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textViewKategorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                tools:text="Kategorie:" />

            <TextView
                android:id="@+id/textViewKategorie2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                tools:text="Kleidung, barrierefrei" />

            <TextView
                android:id="@+id/textViewLadenbeschreibung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:textColor="#000000"
                android:textSize="45px"
                android:layout_marginTop="10dp"
                tools:text="Hier finden Sie unterschiedliche Stoffe, Bänder, Knöpfe und vieles mehr" />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/orangeLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:background="#FFA21F"
            android:layout_marginTop="15dp">
        </LinearLayout>


        <TextView

            android:id="@+id/textViewSortiment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="45px"
            android:textColor="#000000"
            tools:text="Sortiment" />


        <LinearLayout
            android:id="@+id/sortimentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


            <Button
                android:id="@+id/buttonStoffe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#F0F0F0"
                android:foreground="@drawable/fav_button"
                android:freezesText="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:visibility="visible"
                android:layout_gravity="right"
                android:text="Stoffe"
                android:gravity="bottom|center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                />

            <Button
                android:id="@+id/buttonKnoepfe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#F0F0F0"
                android:foreground="@drawable/fav_button"
                android:freezesText="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:visibility="visible"
                android:layout_gravity="right"
                android:text="Knöpfe"
                android:gravity="bottom|center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHighlight="#000000"/>


        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/Navigation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFA21F"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="visible"
                tools:visibility="visible">

                <Button
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#FFA21F"
                    android:foreground="@drawable/home_button"
                    android:freezesText="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/anfragen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#FFA21F"
                    android:foreground="@drawable/mail_button"
                    android:freezesText="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/fav"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#FFA21F"
                    android:foreground="@drawable/fav_button"
                    android:freezesText="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/konto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#FFA21F"
                    android:foreground="@drawable/konto_button"
                    android:freezesText="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#FFA21F"
                    android:foreground="@drawable/menu_button"
                    android:freezesText="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:visibility="visible" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFA21F"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Startseite"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Anfragen"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Favoriten"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mein Konto"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Menü"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>