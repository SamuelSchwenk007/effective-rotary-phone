<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartseiteActivity"
    android:paddingBottom="70dp">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:scrollbarThumbVertical="@color/smallternativOrange">

    <LinearLayout
        android:id="@+id/maincontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/maincontainerinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/hauptstandortContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewHauptstandort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hauptstandort:"
                    android:textColor="#000000"
                    tools:text="Hauptstandort:"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/textViewHauptstandort2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lübeck"
                    android:textColor="#000000"
                    android:textSize="55px"
                    tools:text="Lübeck" />

                <Button
                    android:id="@+id/buttonAendern1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/roundedbutton"
                    android:text="@string/aendern"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/orangeLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:background="#FFA21F"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/spracheContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSprache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sprache:"
                    android:textColor="#000000"
                    tools:text="Sprache:"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/textViewSprache2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="deutsch"
                    android:textColor="#000000"
                    android:textSize="55px"
                    tools:text="deutsch" />

                <Button
                    android:id="@+id/buttonAendern2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/roundedbutton"
                    android:text="@string/aendern"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/orangeLine2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:background="#FFA21F"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/barrierefreiContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewBarrierefrei"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Immer barrierefrei suchen:"
                    android:textColor="#000000"
                    tools:text="Immer barrierefrei suchen:"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/textViewBarrierefrei2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ja"
                    android:textColor="#000000"
                    android:textSize="55px"
                    tools:text="Ja" />

                <Button
                    android:id="@+id/buttonAendern3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/roundedbutton"
                    android:text="@string/aendern"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/orangeLine3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:background="#FFA21F"
                android:orientation="horizontal"></LinearLayout>


            <LinearLayout
                android:id="@+id/ladenprofilErstellenContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewLadenprofilErstellen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Besitzt du einen Laden?"
                    android:textColor="#000000"
                    tools:text="Besitzt du einen Laden?"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/textViewLadenprofilErstellen2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nein"
                    android:textColor="#000000"
                    android:textSize="55px"
                    tools:text="Nein" />

                <Button
                    android:id="@+id/buttonLadenprofilErstellen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/roundedbutton"
                    android:text="@string/ladenprofil_erstellen"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/orangeLine4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:background="#FFA21F"
                android:orientation="horizontal"></LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>


</android.widget.RelativeLayout>