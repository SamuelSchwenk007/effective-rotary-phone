<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <LinearLayout
        android:id="@+id/maincontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">



    <LinearLayout
        android:id="@+id/maincontainerinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/hauptstandortContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textViewHauptstandort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:textColor="#000000"
                tools:text="Hauptstandort:" />

            <TextView
                android:id="@+id/textViewHauptstandort2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:textColor="#000000"
                android:textSize="55px"
                tools:text="Lübeck" />

            <Button
                android:id="@+id/buttonAendern1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbutton"
                android:text="@string/aendern"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:layout_gravity="right"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/orangeLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:background="#FFA21F"
            android:layout_marginTop="15dp">
        </LinearLayout>


        <LinearLayout
            android:id="@+id/spracheContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textViewSprache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:textColor="#000000"
                tools:text="Sprache:" />

            <TextView
                android:id="@+id/textViewSprache2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:textColor="#000000"
                android:textSize="55px"
                tools:text="deutsch" />

            <Button
                android:id="@+id/buttonAendern2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbutton"
                android:text="@string/aendern"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:layout_gravity="right"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/orangeLine2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:background="#FFA21F"
            android:layout_marginTop="15dp">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/barrierefreiContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textViewBarrierefrei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:textColor="#000000"
                tools:text="Immer barrierefrei suchen:" />

            <TextView
                android:id="@+id/textViewBarrierefrei2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:textColor="#000000"
                android:textSize="55px"
                tools:text="Ja" />

            <Button
                android:id="@+id/buttonAendern3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbutton"
                android:text="@string/aendern"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:layout_gravity="right"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/orangeLine3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:background="#FFA21F"
            android:layout_marginTop="15dp">
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ladenprofilErstellenContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textViewLadenprofilErstellen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:textColor="#000000"
                tools:text="Besitzt du einen Laden?" />

            <TextView
                android:id="@+id/textViewLadenprofilErstellen2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:textColor="#000000"
                android:textSize="55px"
                tools:text="Nein" />

            <Button
                android:id="@+id/buttonLadenprofilErstellen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbutton"
                android:text="@string/ladenprofil_erstellen"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:layout_gravity="right"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/orangeLine4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:background="#FFA21F"
            android:layout_marginTop="15dp">
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/Navigation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFA21F"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="visible"
                tools:visibility="visible">

                <Button
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#FFA21F"
                    android:foreground="@drawable/home_button"
                    android:freezesText="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/anfragen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#FFA21F"
                    android:foreground="@drawable/mail_button"
                    android:freezesText="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/fav"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#FFA21F"
                    android:foreground="@drawable/fav_button"
                    android:freezesText="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/konto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#FFA21F"
                    android:foreground="@drawable/konto_button"
                    android:freezesText="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#FFA21F"
                    android:foreground="@drawable/menu_button"
                    android:freezesText="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    tools:visibility="visible" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFA21F"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Startseite"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Anfragen"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Favoriten"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mein Konto"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Menü"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</android.widget.LinearLayout>