<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@color/smallternativOrange">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <Button
                    android:id="@+id/buttonAnfrageAbbrechenAngenommen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/roundedbutton"
                    android:text="Anfrage abbrechen"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ladenNameContainerAnfragenAngenommen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/eintrag_bild_profil_anfragen_angenommen"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textViewProduktAngenommen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="24dp"
                        android:text="Papaya"
                        tools:text="Papaya" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewLadenNameAnfragenAngenommen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Laden: Asiatica"
                    tools:text="Laden: Asiatica"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/textViewProduktdetailsAngenommen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    tools:text="Produktdetails: test, test"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/textViewAnzahlAngenommen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Anzahl: 5"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    tools:text="Anzahl: 5" />
                <TextView
                    android:id="@+id/textViewDatumAngenommen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Datum: 21.05.2020"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    tools:text="Datum: 21.05.2020" />
                <TextView
                    android:id="@+id/textViewStatusAngenommen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Status: angenommen"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    tools:text="Status: angenommen" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">
            <TextView

                android:id="@+id/textViewAntwortAngenommen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="Antwort:"
                tools:text="Antwort:" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarThumbVertical="@color/smallternativOrange"
                android:layout_marginTop="10dp"
                android:paddingBottom="70dp">

                <TextView

                    android:id="@+id/textViewAntwortTextAngenommen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="Leckere Papayas können wir dier gerne zu Verfügung stellen"
                    tools:text="Leckere Papayas können wir dier gerne zu Verfügung stellen" />

            </ScrollView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>


</android.widget.LinearLayout>